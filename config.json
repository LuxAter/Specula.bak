{
  "CXX": "clang++",
  "CXXIGNORE": "",
  "CXXFLAGS": ["-std=c++17", "-fPIC", "-Wall", "-Wpedantic", "--static"],
  "link": "-lz",
  "source": "source",
  "include_dir": "include",
  "include": ["-I$(ROOT)/$(EXTERNAL)/estl", "-I$(ROOT)/$(BUILD)/libpng/include"],
  "build": "build",
  "external": "external",
  "test": "test",
  "example": "example",
  "specula": {
    "path": "$(ROOT)/specula",
    "files": "{{source}}/main.cpp",
    "type": "exe",
    "dep": ["libspecula.a"],
    "group": "main"
  },
  "libspecula.a": {
    "path": "{{build}}/libspecula.a",
    "files": "{{source}}/*.cpp",
    "files_exclude": "{{source}}/main.cpp",
    "type": "lib",
    "join": true,
    "dep": ["libpng.a"]
  },
  "libpng.a": {
    "path": "$(ROOT)/{{build}}/libpng.a",
    "source": "{{external}}/libpng",
    "type": "aumake"
  }
}
